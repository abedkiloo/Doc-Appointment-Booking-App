<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.unifysoftech.abedx.medicare.BookAppointment"
    tools:showIn="@layout/activity_book_appointment">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date of Appointment"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10" />

    <Button
        android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeLect Date"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/FEEL"
        android:layout_alignEnd="@+id/FEEL"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:id="@+id/bookappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="103dp"
        android:onClick="btnBookAppointment"
        android:text="Book APointment" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You selected Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/pickDate"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_alignRight="@+id/FEEL"
        android:layout_alignEnd="@+id/FEEL" />

    <TextView
        android:background="#bcc8e2"
        android:dividerHeight="4dp"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:text="DOCTOR NAME"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/pickDate"
        android:layout_alignEnd="@+id/pickDate" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:background="#bcc8e2"
        android:text="Aligment"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/textView18"
        android:layout_toStartOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How do  you feel"
        android:id="@+id/textView17"
        android:layout_below="@+id/showDate"
        android:layout_toRightOf="@+id/pickDate"
        android:layout_toEndOf="@+id/pickDate" />

    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Booking Doctor"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:background="#bcc8e2"
        android:id="@+id/bookingdoctor"
        android:layout_alignTop="@+id/editText"
        android:layout_alignRight="@+id/FEEL"
        android:layout_alignEnd="@+id/FEEL"
        android:layout_toEndOf="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:background="#bcc8e2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Specialisation"
        android:id="@+id/BOOKINGDISEASE"
        android:layout_above="@+id/textView8"
        android:layout_alignRight="@+id/bookingdoctor"
        android:layout_alignEnd="@+id/bookingdoctor"
        android:layout_alignTop="@+id/textView10"
        android:layout_toEndOf="@+id/showDate"
        android:layout_alignLeft="@+id/bookingdoctor"
        android:layout_alignStart="@+id/bookingdoctor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FEEL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView17" />

    <!--Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify"
        android:id="@+id/Notify"
        android:layout_below="@+id/bookappointment"
        android:layout_alignLeft="@+id/showDate"
        android:layout_alignStart="@+id/showDate" /-->
</RelativeLayout>
